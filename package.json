{
  "name": "CodeWhisper",
  "displayName": "CodeWhisper - Your personal AI Error Helper",
  "description": "Detects code errors in a sidebar and provides AI-powered explanations and chat support using Gemini.",
  "version": "1.3.0",
  "type": "module",
  "publisher": "Raj Ribadiya",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView: aiErrorHelperView",
    "onView: aiChatView",
    "onCommand:ai-chat.openChat"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-error-helper-sidebar",
          "title": "CodeWhisper",
          "icon": "$(debug-console)"
        }
      ]
    },
    "views": {
      "ai-error-helper-sidebar": [
        {
          "id": "aiErrorHelperView",
          "name": "Detected Errors"
        },
        {
          "id": "aiChatView",
          "name": "AI Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "ai-error-helper.getExplanation",
        "title": "AI Error Helper: Get Explanation"
      },
      {
        "command": "ai-chat.openPanel",
        "title": "AI Chat: Open Panel"
      }
    ]
  },
  "scripts": {
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "dotenv": "^16.4.5",
    "pdfkit": "^0.17.1"
  }
}
